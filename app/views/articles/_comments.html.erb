<div class="article-reviews">
    <% @comments.each do |comment| %>
        <div class="row">
            <hr>
            <p class="col-xs-12"><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <p class="col-xs-12"><%= comment.body %></p>
        </div>
    <% end %>
    <%= will_paginate @comments %>
</div>
